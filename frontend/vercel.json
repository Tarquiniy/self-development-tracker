{
  "rewrites": [
    { 
      "source": "/api/(.*)", 
      "destination": "https://self-development-tracker.onrender.com/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self' https: 'unsafe-inline' 'unsafe-eval' blob: data:;"
        }
      ]
    }
  ]
}